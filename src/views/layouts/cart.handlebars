<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
</head>
<body>
    <h1>Carrito</h1>
    <ul id="cartProducts">
        {{#each cart.products}}
            <li>
                {{this.product.name}} - {{this.quantity}}
                <button onclick="removeFromCart('{{this.product._id}}')">Eliminar</button>
            </li>
        {{/each}}
    </ul>
    <button onclick="placeOrder()">Ordenar</button>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const cartProducts = document.getElementById('cartProducts');

        function removeFromCart(productId) {
            fetch(`/api/cart/${cartId}/product/${productId}`, {
                method: 'DELETE'
            }).then(response => {
                if (response.ok) {
                    alert('Producto eliminado del carrito');
                    location.reload(); // Recargar la página para actualizar la lista
                } else {
                    alert('Error al eliminar el producto');
                }
            });
        }

        function placeOrder() {
            fetch('/api/order', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ cartId })
            }).then(response => {
                if (response.ok) {
                    alert('Orden realizada con éxito');
                } else {
                    alert('Error al realizar la orden');
                }
            });
        }
    </script>
</body>
</html>